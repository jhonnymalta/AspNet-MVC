@model UserProfile
@{

    ViewData["Title"] = "Home Page";
}
<div class="container-fluid h-100">
    <div class="row h-100">
        <div class="col-7 ladoA text-center h-100">
            <h5 class=" text-start">@Model.Name.ToUpper()</h5>
            <div class="h-75 d-flex align-items-center justify-content-center ">
                <p id="t-fullstack">FULLSTACK<br /> <span id="t-develope">DEVELOPER</span><br /> <span id="t-netcore">.NETCORE</span></p>
            </div>
            <div class="d-flex justify-content-end">
                <div class="my-pill ms-3">
                    <span>.net</span>
                </div>
                <div class="my-pill ms-3">
                    <span>AspNet<br /> MVC</span>
                </div>
                <div class="my-pill ms-3">
                    <span>SQL<br /> Server</span>
                </div>



            </div>
        </div>
        <div class="col-5 ladoB  p-5 h-100">
            <div class="d-flex justify-content-center ">
                <img class="fotoperfil " src="~/images/fotoperfil.jpeg"></img>

            </div>
            <div class="  d-flex align-items-center justify-content-center">
                <p class=" text-white text-left ">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla dignissim tellus purus, ut commodo neque mattis lacinia. Duis sem diam,
                    tincidunt tristique neque nec, interdum facilisis dui. Vestibulum eleifend massa quis ante tempus posuere. Ut nec efficitur dolor.
                    Phasellus lectus lacus, rutrum vel mollis in, pretium ac magna. Morbi ornare nisl in urna commodo, at aliquet nibh cursus.
                    Morbi suscipit neque nec lectus rutrum euismod
                </p>

            </div>
        </div>

    </div>
</div>




<style>
    .content {
        height: 100%;
    }

    .ladoA {
        padding: 30px;
    }

    #t-fullstack {
        font-size: 2rem;
        line-height: 2rem;
        color: rgb(51,51,91)
    }

    #t-develope {
        font-size: 6rem;
        line-height: 4rem;
        color: rgb(51,51,51)
    }

    #t-netcore {
        font-size: 7rem;
        line-height: 5rem;
        color: darkgray
    }

    .my-pill {
        background-color: black;
        width: 100px;
        height: 100px;
        border-radius: 50px;
        color: white;
        display: flex;
        justify-content: center;
        align-items: center;
    }


    .ladoB {
        background-color: black;
    }

    .fotoperfil {
        height: 180px;
        margin-bottom: 5px;
        border-radius: 50px;
    }
</style>

