<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Portfólio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/_002_Portfolio.styles.css" asp-append-version="true" />

    <!--Custom css-->
    <link rel="stylesheet" href="~/css/jota_StyleSheet.css"></link>

    <!--Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat+Alternates&family=Poppins:wght@100;200;400&display=swap" rel="stylesheet"> 



</head>
<body class="my-grid grid-template-areas">
    <header  class="my-nav">
        <nav class="">
            <div class=" d-flex">
                <a  asp-area="" asp-controller="Home" asp-action="Index">Portfólio</a>
               
                <div class="">
                    <ul class="d-flex">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Boas Vindas</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Habilidade" asp-action="Index">Habilidades</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Projetos</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cursos" asp-action="Index">Cursos</a>
                        </li>
                         <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" >Baixar meu Currículo</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main  role="main" class="my-main" >
            @RenderBody()
        </main>
    </div>
    

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>



<style>
    
    html{
        margin:0;
        padding:0;
        box-sizing:border-box;
        height:100vh;
        width:100vw;

    }
.my-grid{
    display:grid;
    height:100%;
    margin:auto;
    padding:inherit;
    
}

.my-nav{
    grid-area: nav;
    border-bottom: solid 1px #515151;
    height:100%
   
}
.my-main{
    grid-area:main;   
    height: 100%;
    width:100vw;
   

    
}

.grid-template-areas{
    grid-template-rows: 45px 1fr ;
    grid-template-areas: "nav"
                         "main"
                         
}


</style>
